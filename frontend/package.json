{
  "name": "hidden-spots-frontend",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject"
  },
  "dependencies": {
    "expo": "~49.0.0",
    "expo-status-bar": "~1.6.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-maps": "1.7.1",
    "expo-location": "~16.1.0",
    "expo-image-picker": "~14.3.2",
    "expo-camera": "~13.4.4",
    "expo-media-library": "~15.4.1",
    "expo-file-system": "~15.4.5",
    "expo-image-manipulator": "~11.5.0",
    "expo-linear-gradient": "~12.3.0",
    "expo-blur": "~12.4.1",
    "expo-haptics": "~12.4.0",
    "expo-constants": "~14.4.2",
    "expo-linking": "~5.0.2",
    "expo-sharing": "~11.5.0",
    "expo-clipboard": "~4.3.0",
    "expo-splash-screen": "~0.20.5",
    "expo-font": "~11.4.0",
    "expo-asset": "~8.10.1",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "~3.22.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-reanimated": "~3.3.0",
    "react-native-vector-icons": "^10.0.2",
    "react-native-paper": "^5.11.1",
    "react-native-elements": "^3.4.3",
    "react-native-ratings": "^8.1.0",
    "react-native-modal": "^13.0.1",
    "react-native-animatable": "^1.3.3",
    "react-native-flash-message": "^0.4.2",
    "axios": "^1.5.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "react-native-keychain": "^8.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.2",
    "typescript": "^5.1.3"
  },
  "private": true,
  "expo": {
    "name": "Hidden Spots",
    "slug": "hidden-spots",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hiddenspots.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show nearby hidden spots.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to location to show nearby hidden spots.",
        "NSCameraUsageDescription": "This app needs access to camera to take photos of hidden spots.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for hidden spots."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.hiddenspots.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-image-picker",
      "expo-camera",
      "expo-media-library"
    ]
  }
} 